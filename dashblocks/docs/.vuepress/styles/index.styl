.theme-container.dashblocks-landing::before {
  background-image: url("/d2.png");
  filter: blur(6px);
  background-size: cover;
  content: "";
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
  opacity: 0.4;
  -webkit-clip-path: polygon(0 0, 0 100%, 100% 40%, 100% 0);
  clip-path: polygon(0 0, 0 100%, 100% 40%, 100% 0);
}


